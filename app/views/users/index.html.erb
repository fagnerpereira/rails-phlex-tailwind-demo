<div class="w-full">
  <% content_for :title, "Users" %>

  <%= render HeaderComponent.new(title: "Users") do %>
    <%= link_to new_user_path do %>
      <%= render ButtonComponent.new(text: "New user") %>
    <% end %>
  <% end %>

  <%= render NoticeComponent.new(notice: notice) %>

  <%= render ListComponent.new(id: 'user', pagy: @pagy) do %>
    <% @users.each do |user| %>
      <%= render user %>
    <% end %>
  <% end %>
</div>
