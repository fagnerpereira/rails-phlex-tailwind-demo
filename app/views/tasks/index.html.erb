<div class="w-full">
  <% content_for :title, "Tasks" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-blue-500">Tasks</h1>
    <%= link_to new_task_path, class: "rounded-lg py-3 px-5 bg-blue-500 hover:bg-blue-600 text-white block font-medium" do %>
      <span>New task</span>
    <% end %>
  </div>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg w-full" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div id="tasks" class="min-w-full mt-4 flex flex-col gap-4" >
    <% @tasks.each do |task| %>
      <%= render task %>
    <% end %>

    <%== pagy_nav(@pagy, id: 'nav', aria_label: 'Pages nav') %>
  </div>
</div>
